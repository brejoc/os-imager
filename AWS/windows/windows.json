{
  "_comment": "Build with `packer build windows.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "801119661308"
        ],
        "most_recent": true
      },
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "instance_type": "t2.xlarge",
      "enable_t2_unlimited": true,
      "user_data_file": "AWS/windows/scripts/SetUpWinRM.ps1",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "ami_name": "{{ user `ami_name` }}/{{timestamp}}",
      "ami_description": "Base Image of Windows {{ user `os_version` }}",
      "tags": {
        "Name":"Base // Windows {{ user `os_version`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "BASE",
        "created-by": "packer",
        "Owner": "SRE"
      },
      "run_tags": {
        "Name": "Packer Windows {{ user `os_version` }} Builder",
        "created-by": "packer",
        "Owner": "SRE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "inline": [
        "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/InitializeInstance.ps1 -Schedule",
        "C:/ProgramData/Amazon/EC2-Windows/Launch/Scripts/SysprepInstance.ps1 -NoShutdown"
      ]
    }
  ]
}
