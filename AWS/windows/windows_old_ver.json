{
  "_comment": "Build with `packer build windows_old.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "801119661308"
        ],
        "most_recent": true
      },
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "instance_type": "c5.large",
      "user_data_file": "{{ user `user_data_file` }}",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "ami_name": "{{ user `ami_name` }}/{{timestamp}}",
      "ami_description": "Base Image of {{ user `os_name` }} {{ user `os_version` }}",
      "tags": {
        "Name":"Base // {{ user `os_name` }} {{ user `os_version`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "BASE",
        "created-by": "packer",
        "Owner": "SRE"
      },
      "run_tags": {
        "Name": "Packer {{ user `os_name` }} {{ user `os_version` }} Builder",
        "created-by": "packer",
        "Owner": "SRE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "inline": ["\"c:\\Program Files\\Amazon\\Ec2ConfigService\\ec2config.exe\" -sysprep"]
    }
    ]
}
