{
  "_comment": "Builds a packer debian image in AWS",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "{{ user `ami_owner` }}"
        ],
        "most_recent": true
      },
      "instance_type": "m4.large",
      "ssh_username": "{{ user `ssh_username` }}",
      "ami_name": "{{ user `ami_name` }}/{{timestamp}}",
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "ami_description": "Base Image of Debian {{ user `os_version` }}",
      "tags": {
        "Name":"Base // Debian {{ user `os_version`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "BASE"
      },
      "run_tags": {
        "Name": "Packer Debian {{ user `os_version` }} Builder"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "{{ user `device_name` }}",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo  rm -rf /etc/apt/apt.conf.d/50unattended-upgrades"
      ]
    }
  ]
}
