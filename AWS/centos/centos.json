{
  "_comment": "Build with `packer build centos.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_filter` }}",
          "root-device-type": "ebs"
        },
        "owners": [
          "{{ user `ami_owner` }}"
        ],
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ami_name": "{{ user `ami_name_prefix` }}/{{ user `build_type` }}/{{ user `ami_name_suffix` }}/{{timestamp}}",
      "ami_users": [
        "883373499178",
        "540082622920",
        "989543020150",
        "178480506716"
      ],
      "ami_description": "{{ user `build_type` | upper }} Image of {{ user `os_name` }} {{ user `os_version` }}",
      "tags": {
        "Name": "{{ user `build_type` | upper }} // {{ user `os_name` }} {{ user `os_version`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "{{ user `build_type` | upper }}",
        "created-by": "packer",
        "Owner": "SRE",
        "Bootstrapped-Salt-Args": "{{ user `bootstrap_args` }}",
        "Bootstrapped-Salt-Version": "{{ user `bootstrap_version` }}"
      },
      "run_tags": {
        "Name": "Packer {{ user `build_type` | upper }} {{ user `os_name` }} {{ user `os_version` }} Builder",
        "created-by": "packer",
        "Owner": "SRE"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "script": "AWS/files/clone-sre-jenkins.sh",
      "environment_vars": [
        "DISTRO_SLUG={{ user `distro_slug` }}"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /etc/salt/gpgkeys"
      ]
    },
    {
      "type": "file",
      "generated": true,
      "source": "gpgkey.asc",
      "destination": "/tmp/gpgkey.asc",
      "direction": "upload"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mkdir -p /etc/salt/gpgkeys",
        "sudo chmod 700 /etc/salt/gpgkeys",
        "sudo bash -c 'export GNUPGHOME=/etc/salt/gpgkeys; gpg --import /tmp/gpgkey.asc'",
        "sudo rm -f /tmp/gpgkey.asc"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/{{ user `distro_slug` }}/sre-jenkins/states",
      "local_pillar_roots": ".tmp/{{ user `distro_slug` }}/sre-jenkins/pillar",
      "custom_state": "services.jenkins-node.ec2-latent-slave",
      "bootstrap_args": "{{ user `bootstrap_args` }} stable {{ user `bootstrap_version` }}"
    },
    {
      "pause_before": "5s",
      "type": "shell",
      "inline": [
        "sudo yum autoremove -y salt salt-minion",
        "sudo rm -rf /etc/salt/gpgkeys /etc/salt /srv/pillar /srv/salt /tmp/salt /tmp/pillar /var/cache/salt /var/log/salt /tmp/bootstrap-salt.log /tmp/install_salt.sh /etc/yum.repos.d/saltstack.repo",
        "sync"
      ],
      "pause_after": "5s"
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifest.json",
      "strip_path": true,
      "custom_data": {
        "ami_name": "{{ user `ami_name_prefix` }}/{{ user `build_type` }}/{{ user `ami_name_suffix` }}"
      }
    }
  ]
}
